<div class="row">
	<div class="col-lg-6 col-md-offset-3">
	<% if(errors.length > 0) {%>
	<div class="alert alert-danger alert-dismissable">
		<button type="button" data-dismiss="alert" class="close" aria-label="Close">
			<span aria-hidden="ture">&times;</span>
		</button>
		<%= errors %>
	</div>
	<% } %>
